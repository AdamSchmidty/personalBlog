#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

# Check if any markdown files in content/posts have been modified
if git diff --cached --name-only | grep -q "content/posts/.*\.mdx"; then
  echo "ğŸ”„ Markdown files detected, regenerating search index..."
  node scripts/generate-search-index.js
  git add public/search-index.json
  echo "âœ… Search index updated and staged"
else
  echo "â„¹ï¸  No markdown files changed, skipping search index update"
fi
